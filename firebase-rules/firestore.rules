
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users root collection - each user can only access their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
      
      // All nested collections under users/{userId}/
      match /{subCollection}/{docId} {
        allow read, write: if isOwner(userId) || isAdmin();
        
        // Nested subcollections (like users/{userId}/notes/{noteId}/comments/{commentId})
        match /{nestedCollection}/{nestedDocId} {
          allow read, write: if isOwner(userId) || isAdmin();
        }
      }
    }
    
    // Legacy collections that should be migrated to users/{userId}/collection structure
    // These are kept for backward compatibility during migration
    
    // User activity tracking
    match /userActivity/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all activity
    }
    
    // Study plans
    match /studyPlans/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all study plans
    }
    
    // Notifications
    match /notifications/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all notifications
    }
    
    // History for all study sessions
    match /history/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all history
    }
    
    // AI Learning Assistant sessions
    match /ai_sessions/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all AI sessions
    }
    
    // Note chats
    match /note_chats/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all note chats
    }
    
    // Summary sessions
    match /summary_sessions/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all summary sessions
    }
    
    // Math chat history
    match /math_chat_history/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all math chat history
    }
    
    // Notes history
    match /notes_history/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all notes history
    }
    
    // Flashcards
    match /flashcards/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all flashcards
    }
    
    // Summaries
    match /summaries/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all summaries
    }
    
    // Audio notes
    match /audioNotes/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all audio notes
    }
    
    // Quiz data
    match /quizzes/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all quiz data
    }
    
    // AI doubt chain
    match /doubtChain/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if isAdmin(); // Admins can access all doubt chains
    }
    
    // Subscriptions - read only for users, full access for admins
    match /subscriptions/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow read, write: if isAdmin(); // Admins can manage all subscriptions
    }
    
    // User stats
    match /userStats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read, write: if isAdmin(); // Admins can access all user stats
    }
    
    // Public data (if any) - readable by all authenticated users
    match /public/{document} {
      allow read: if request.auth != null;
      allow write: if isAdmin(); // Only admins can write public data
    }
    
    // All other collections - deny by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
