
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Canvas environment: artifacts/{appId} structure
    match /artifacts/{appId}/users/{userId} {
      // User profile document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // All nested collections under users/{userId}/
      match /{subCollection}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // Nested subcollections (like stats/summary, etc.)
        match /{nestedCollection}/{nestedDocId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // App-level collections with user ownership check
    match /artifacts/{appId}/studyPlans/{planId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /artifacts/{appId}/userActivity/{activityId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /artifacts/{appId}/notifications/{notificationId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /artifacts/{appId}/history/{historyId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /artifacts/{appId}/ai_sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /artifacts/{appId}/note_chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /artifacts/{appId}/summary_sessions/{sessionId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /artifacts/{appId}/math_chat_history/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /artifacts/{appId}/notes_history/{noteId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /artifacts/{appId}/flashcards/{cardId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /artifacts/{appId}/summaries/{summaryId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /artifacts/{appId}/audioNotes/{noteId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /artifacts/{appId}/quizzes/{quizId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /artifacts/{appId}/doubtChain/{doubtId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Public data (if any)
    match /artifacts/{appId}/public/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Legacy collections for backward compatibility (gradually migrate these)
    match /userActivity/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /studyPlans/{document} {
      allow read, write: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // All other documents - deny by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
